<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#8C8C8C" />
                    <padding android:bottom="1dp" android:left="5dp" android:right="10dp" android:top="1dp" />
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="right|center" android:src="@drawable/ic_drop_down" />
                <shape>
                    <padding android:right="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
